.post-reward
    width 100%
    .reward-btn
        display block
        margin yard auto
        padding yard
        text-align center
        border 1px solid $color-main
        width 48px
        border-radius: 8px
        &:hover
            color #FFF
            background-color $color-main
            cursor pointer

    .reward-wrapper
        margin (yard*3) 0
        flex-direction row
        justify-content center
        align-items center
        .reward-item
            margin 0 2%
        img
            width 150px
            height @width
